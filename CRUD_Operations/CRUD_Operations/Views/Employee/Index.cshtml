
@{
    /**/

    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Employee</title>
    <!-- CDN JavaScript Links-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.9/angular.min.js"></script>

    <!-- end-->
</head>
<body ng-app="myApp">
    <div ng-controller="EmployeeMainController">
        <div class="container">
            <!-- Trigger the modal with a button -->
            <center>
                <h2>Welcome</h2>
                <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#addEmployee">ADD NEW EMPLOYEE</button>
            </center>
            <!-- Modal -->
            <div class="modal fade" id="addEmployee" role="dialog">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Modal Header</h4>
                        </div>
                        <div class="modal-body">
                            <form name="newUploadForm" id="fileupload" novalidate>
                                <div class="col-md-12">
                                    <div class="form-group margin-Bottom0" show-errors>
                                        <label class="lableMargin">Employee Name<lable class="RequiredFeildIndicator">*</lable></label>
                                        <input type="text" class="form-control input-sm" id="employeeName" name="employeeName" ng-model="employeeName" required />
                                    </div>


                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" id="clearDocumentUploadDataBtn" ng-click="clearDocumentUploadData();clear()">Clear</button>
                            <button type="button" class="btn-primary" id="saveDocumentUploadBtn" ng-click="saveEmployeeDtails()">Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div id="uploadsSmartTable">

            <!-- Smart Table for view blob details -->
            <table st-table="displayedCollection" st-safe-src="rowCollection" class="table table-striped summery-table-styles" style="overflow-x:scroll">
                <thead>
                    <tr>
                        <th st-sort="docsNo" hidden="hidden">DocNo</th>
                        <th st-sort="docsDate" hidden="hidden">Date</th>
                        <th st-sort="docsEmployee" hidden="hidden">Uploaded By</th>
                        <th st-sort="docsName">Document Name</th>
                        <th st-sort="docsBarcode">Barcode</th>
                        <th st-sort="docsRackNo">Rack No</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="row in displayedCollection">
                        <td hidden="hidden">{{row.docsCode}}</td>
                        <td hidden="hidden">{{row.docsDate}}</td>
                        <td hidden="hidden">{{row.docsEmployee}}</td>
                        <td>{{row.docsName}}</td>
                        <td>{{row.docsBarcode}}</td>
                        <td>{{row.docsRackNo}}</td>
                        <td>
                            <button type="button" ng-click="viewButtonClicked(row)"
                                    class="btn btn-xs btn-info smart-button-view"
                                    data-toggle="modal" data-target="#viewUploadModel">
                                <i class="glyphicon glyphicon-file">
                                </i>
                            </button>
                        </td>


                        <td>
                            <button type="button" ng-click="editButtonClicked(row)"
                                    class="btn btn-xs btn-warning smart-button-edit"
                                    data-toggle="modal" data-target="#editUploadModel">
                                <i class="glyphicon glyphicon-edit">
                                </i>
                            </button>
                        </td>

                        <td>
                            <button type="button" ng-click="deleteButtonClicked(row)"
                                    class="btn btn-xs btn-danger smart-button-remove"
                                    data-toggle="modal" data-target="#viewUploadModel">
                                <i class="glyphicon glyphicon-remove">
                                </i>
                            </button>
                        </td>

                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="11" class="text-center">
                            <div st-pagination="" st-items-by-page="6" st-displayed-pages="10"></div>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
        <script src="~/Scripts/Employee.js"></script>
    </div>
</body>
</html>
